<Window x:Class="WpfObservers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfObservers"
        mc:Ignorable="d"
        Title="MainWindow"
        Width="200px"
        Height="100px" Closed="Window_Closed">
  <StackPanel Orientation="Vertical">
    <Button Name="btnAddClock" Click="btnAddClock_Click">Neue Uhr</Button>
    <Button Name="btnStartTimer" Click="btnStartTimer_Click">Timer Starten</Button>
  </StackPanel>
</Window>
